            android:name="com.techila.speedcontracting.Splash"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity
            android:name="com.techila.speedcontracting.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            
        </activity>
        
        <activity
            android:name="com.techila.speedcontracting.CreateContractActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"
            android:screenOrientation="portrait"
            >
            
        </activity>
    </application>

</manifest>
